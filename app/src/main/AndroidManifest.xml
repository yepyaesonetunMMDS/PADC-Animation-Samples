<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.prime.ypst.padc_animation_samples">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@drawable/ic_animation_padc"
            android:label="@string/app_name"
            android:roundIcon="@drawable/ic_animation_padc"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".activities.AttractionDetailActivity"
                  android:theme="@style/TranspantTheme">
        </activity>
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>